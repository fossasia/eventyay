###########
# BUILDER #
###########

# pull official base image
FROM python:3.12-slim-bookworm AS builder
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# set work directory
ENV APP_HOME=/home/app/web
RUN mkdir -p $APP_HOME
WORKDIR $APP_HOME

# set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# install system dependencies
# Repo for newer NodeJS
RUN apt-get update && apt-get install -y wget gnupg
RUN wget -qO- https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key | gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg && \
    echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_22.x nodistro main" > /etc/apt/sources.list.d/nodesource.list
RUN apt-get update && \
    apt-get install -y --no-install-recommends git build-essential gettext make nodejs

# install python dependencies
# Ref: https://docs.astral.sh/uv/guides/integration/docker/#non-editable-installs
RUN --mount=type=cache,target=/root/.cache/uv \
    --mount=type=bind,source=uv.lock,target=uv.lock \
    --mount=type=bind,source=pyproject.toml,target=pyproject.toml \
    uv sync --no-install-project --no-editable

COPY Makefile Makefile


#########
# FINAL #
#########

# pull official base image
FROM python:3.12-slim-bookworm

# create directory for the app user
RUN mkdir -p /home/app

# create the app user
RUN addgroup --system app && adduser --system --group app

# create the appropriate directories
ENV HOME=/home/app
ENV APP_HOME=/home/app/web
RUN mkdir $APP_HOME
RUN mkdir $APP_HOME/static
WORKDIR $APP_HOME

# install dependencies
RUN apt-get update && apt-get install -y wget gnupg rsync
RUN wget -qO- https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key | gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg && \
    echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_22.x nodistro main" > /etc/apt/sources.list.d/nodesource.list
RUN apt-get update && apt-get install -y --no-install-recommends netcat-traditional nodejs gettext less

# copy entrypoint.prod.sh
COPY ./entrypoint.prod.sh .
RUN sed -i 's/\r$//g'  $APP_HOME/entrypoint.prod.sh
RUN chmod +x  $APP_HOME/entrypoint.prod.sh

# copy project
COPY . $APP_HOME

# schedule editor
COPY eventyay/frontend/schedule-editor eventyay/frontend/schedule-editor
RUN npm ci --prefix=eventyay/frontend/schedule-editor
RUN OUT_DIR=/home/app/web/eventyay/data/compiled-frontend npm run build --prefix=eventyay/frontend/schedule-editor
# schedule widget
COPY eventyay/frontend/schedule eventyay/frontend/schedule
RUN npm ci --prefix=eventyay/frontend/schedule
RUN OUT_DIR=/home/app/web/eventyay/data/compiled-frontend npm run build:wc --prefix=eventyay/frontend/schedule
# Video SPA app
COPY eventyay/webapp eventyay/webapp
RUN npm ci --prefix=eventyay/webapp
RUN OUT_DIR=/home/app/web/eventyay/data/compiled-frontend npm run build --prefix=eventyay/webapp
# rollup needed by Django-Compressor
COPY eventyay/frontend/webcheckin eventyay/frontend/webcheckin
RUN npm ci --prefix=eventyay/frontend/webcheckin
# esbuild needed by Django-Compressor
RUN npm install -g esbuild

# chown all the files to the app user
RUN chown -R app:app $APP_HOME

# Copy the Python environment from the builder
# Note: The venv path in the builder must match the one in runner.
COPY --from=builder --chown=app:app $APP_HOME/.venv $APP_HOME/.venv

# change to the app user
USER app

# Expose virtual env
ENV VIRTUAL_ENV="$APP_HOME/.venv"
ENV PATH="$APP_HOME/.venv/bin:$PATH"
ENV EVY_RUNNING_ENVIRONMENT=production


# Temporarily disable because the PO files are wrong.
# RUN python manage.py compilemessages
RUN python manage.py compilejsi18n
RUN python manage.py collectstatic --noinput
#RUN python manage.py compress

# Now all the files are in $APP_HOME/eventyay/static.dist
# but this will be overloaded with a shared volume
RUN mkdir $APP_HOME/eventyay/static.dist.backup && \
    mv $APP_HOME/eventyay/static.dist/* $APP_HOME/eventyay/static.dist.backup

# Create .secrets to suppress warnings about missing directory
RUN mkdir -p $APP_HOME/.secrets

# run entrypoint.prod.sh
ENTRYPOINT ["/home/app/web/entrypoint.prod.sh"]
