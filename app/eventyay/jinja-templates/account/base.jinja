<!DOCTYPE html>
<html{% if rtl %} dir='rtl' class='rtl'{% endif %}>
<head>
  <meta charset='utf-8'>
  <title>{% block head_title %}{% endblock head_title %} :: {{ settings.INSTANCE_NAME }}</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <meta name='theme-color' content='#2185d0'>

  <link rel='shortcut icon' href="{{ static_url('common/img/icons/favicon.ico') }}">
  <link rel='stylesheet' type='text/css' href="{{ static_url('common/css/_reset.css') }}" />
  <link rel='stylesheet' type='text/css' href="{{ static_url('common/css/base.css') }}" />
  <link rel='stylesheet' type='text/css' href="{{ static_url('common/css/_variables.css') }}" />
  <link rel='stylesheet' type='text/css' href="{{ static_url('common/css/_fonts.css') }}" />
  <link rel='stylesheet' type='text/css' href="{{ static_url('common/css/_forms.css') }}" />
  <link rel='stylesheet' type='text/css' href="{{ static_url('fontawesome/css/font-awesome.brief.css') }}" />
  <link rel='stylesheet' type='text/css' href="{{ static_url('common/css/allauth.css') }}" />

  <style>
    body {
      background-color: #f5f5f5;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    form {
      margin-top: 30px;
    }

    @media (max-width: 768px) {
      body {
        margin: 0;
      }
    }
  </style>

  {% block extra_head %}{% endblock extra_head %}
</head>
<body>
  <div class='page-wrapper'>
    {% block body %}
      {% block content %}
      {% endblock content %}
    {% endblock body %}
  </div>
</body>
</html>
