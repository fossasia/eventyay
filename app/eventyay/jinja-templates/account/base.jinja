<!DOCTYPE html>
<html{% if rtl %} dir='rtl' class='rtl'{% endif %}>
<head>
  <meta charset='utf-8'>
  <title>{% block head_title %}{% endblock head_title %} :: {{ settings.INSTANCE_NAME }}</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <meta name='theme-color' content='#2185d0'>

  <link rel='shortcut icon' href="{{ static_url('common/img/icons/favicon.ico') }}">
  <link rel='stylesheet' type='text/css' href="{{ static_url('common/css/_reset.css') }}" />
  <link rel='stylesheet' type='text/css' href="{{ static_url('common/css/base.css') }}" />
  <link rel='stylesheet' type='text/css' href="{{ static_url('common/css/_variables.css') }}" />
  <link rel='stylesheet' type='text/css' href="{{ static_url('common/css/_fonts.css') }}" />
  <link rel='stylesheet' type='text/css' href="{{ static_url('common/css/_forms.css') }}" />
  <link rel='stylesheet' type='text/css' href="{{ static_url('fontawesome/css/font-awesome.brief.css') }}" />

  <style>
    body {
      background-color: #f5f5f5;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    .email-confirm-container {
      max-width: 600px;
      margin: 80px auto;
      padding: 40px;
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .email-confirm-success-container {
      max-width: 600px;
      margin: 80px auto;
      padding: 40px;
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .email-confirm-container h1 {
      color: #2185d0;
      margin-bottom: 30px;
      font-size: 28px;
      font-weight: 600;
    }

    .alert {
      padding: 15px;
      margin-bottom: 20px;
      border: 1px solid transparent;
      border-radius: 4px;
    }

    .alert-info {
      color: #31708f;
      background-color: #d9edf7;
      border-color: #bce8f1;
    }

    .alert-warning {
      color: #8a6d3b;
      background-color: #fcf8e3;
      border-color: #faebcc;
    }

    .alert-danger {
      color: #a94442;
      background-color: #f2dede;
      border-color: #ebccd1;
    }

    .alert-success {
      color: #3c763d;
      background-color: #dff0d8;
      border-color: #d6e9c6;
    }

    .alert p {
      margin: 0;
      line-height: 1.6;
    }

    .alert a {
      color: inherit;
      text-decoration: underline;
      font-weight: 600;
    }

    .btn {
      display: inline-block;
      padding: 12px 24px;
      margin: 10px 5px;
      font-size: 16px;
      font-weight: 500;
      text-align: center;
      text-decoration: none;
      border: 1px solid transparent;
      border-radius: 4px;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .btn-primary {
      color: #fff;
      background-color: #2185d0;
      border-color: #2185d0;
    }

    .btn-primary:hover {
      background-color: #1678c2;
      border-color: #1678c2;
    }

    .btn-default {
      color: #333;
      background-color: #fafafa;
      border-color: #cfd8dc;
    }

    .btn-default:hover,
    .btn-default:focus {
      color: #222;
      background-color: #e9ecef;
      border-color: #b0bec5;
    }

    .btn-lg {
      padding: 14px 28px;
      font-size: 18px;
    }

    .btn i {
      margin-right: 8px;
    }

    .btn-group {
      display: flex;
      gap: 10px;
      margin-top: 20px;
    }

    form {
      margin-top: 30px;
    }

    @media (max-width: 768px) {
      .email-confirm-container {
        margin: 20px;
        padding: 30px 20px;
      }

      .btn-group {
        flex-direction: column;
      }

      .btn {
        width: 100%;
        margin: 5px 0;
      }
    }
  </style>

  {% block extra_head %}{% endblock extra_head %}
</head>
<body>
  <div class='page-wrapper'>
    {% block body %}
      {% block content %}
      {% endblock content %}
    {% endblock body %}
  </div>
</body>
</html>
