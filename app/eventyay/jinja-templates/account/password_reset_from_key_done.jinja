{% extends 'account/base.jinja' %}

{% block head_title %}
  {{ _('Password Reset Successful') }}
{% endblock head_title %}

{% block extra_head %}
  <style>
    .password-reset-done-container {
      max-width: 500px;
      margin: 2rem auto;
      padding: 0 1rem;
      text-align: center;
    }

    .success-icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 80px;
      height: 80px;
      background-color: #d4edda;
      border-radius: 50%;
      margin-bottom: 1.5rem;
    }

    .success-icon i {
      font-size: 2.5rem;
      color: #28a745;
    }

    .password-reset-done-container h1 {
      font-size: 1.75rem;
      color: #2c3e50;
      margin-bottom: 1rem;
    }

    .password-reset-done-container p {
      color: #555;
      line-height: 1.6;
      margin-bottom: 1.5rem;
      font-size: 1rem;
    }

    .action-buttons {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      justify-content: center;
      margin-top: 2rem;
    }

    .btn {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 500;
      transition: background-color 0.2s;
      text-align: center;
    }

    .btn-primary {
      background-color: #2185d0;
      color: white;
      border: 1px solid #2185d0;
    }

    .btn-primary:hover {
      background-color: #1b6ba8;
    }

    .btn-default {
      background-color: #f5f5f5;
      color: #333;
      border: 1px solid #ddd;
    }

    .btn-default:hover {
      background-color: #e9e9e9;
    }

    .btn .fa {
      margin-right: 0.5rem;
    }

    @media (max-width: 480px) {
      .password-reset-done-container {
        margin: 1rem auto;
      }

      .btn {
        display: block;
        width: 100%;
      }

      .action-buttons {
        flex-direction: column;
      }
    }
  </style>
{% endblock extra_head %}

{% block content %}
  <div class='password-reset-done-container'>
    <div class='success-icon'>
      <i class='fa fa-check'></i>
    </div>

    <h1>{{ _('Password Reset Successful') }}</h1>

    <p>
      {{ _('Your password has been successfully changed. You can now log in with your new password.') }}
    </p>

    <div class='action-buttons'>
      <a href="{{ url_for('eventyay_common:auth.login') }}" class='btn btn-primary'>
        <i class='fa fa-sign-in'></i>
        {{ _('Go to Login') }}
      </a>

      <a href="{{ url_for('eventyay_common:dashboard') }}" class='btn btn-default'>
        <i class='fa fa-home'></i>
        {{ _('Go to Dashboard') }}
      </a>
    </div>
  </div>
{% endblock content %}
