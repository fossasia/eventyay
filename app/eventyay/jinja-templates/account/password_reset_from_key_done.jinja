{% extends 'account/base.jinja' %}

{% block head_title %}
  {{ _('Password Reset Successful') }}
{% endblock head_title %}

{% block content %}
  <div class='password-reset-done-container'>
    <div class='success-icon'>
      <i class='fa fa-check'></i>
    </div>

    <h1>{{ _('Password Reset Successful') }}</h1>

    <p>
      {{ _('Your password has been successfully changed. You can now log in with your new password.') }}
    </p>

    <div class='action-buttons'>
      <a href="{{ url_for('eventyay_common:auth.login') }}" class='btn btn-primary'>
        <i class='fa fa-sign-in'></i>
        {{ _('Go to Login') }}
      </a>

      <a href="{{ url_for('eventyay_common:dashboard') }}" class='btn btn-default'>
        <i class='fa fa-home'></i>
        {{ _('Go to Dashboard') }}
      </a>
    </div>
  </div>
{% endblock content %}
