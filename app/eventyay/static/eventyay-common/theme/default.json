{
  "themeVersion": "1.0.0",
  "name": "Eventyay Base Theme",
  "description": "Default design tokens for Eventyay",
  "tokens": {
    "color": {
      "primary": "#EB2188",
      "secondary": "#3B82F6",
      "background": "#FFFFFF",
      "surface": "#F9FAFB",
      "text": "#111827",
      "text-muted": "#6B7280",
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "border": "#E5E7EB"
    },
    "font": {
      "body": "Inter, system-ui, -apple-system, BlinkMacSystemFont, sans-serif",
      "heading": "Poppins, system-ui, -apple-system, BlinkMacSystemFont, sans-serif",
      "mono": "ui-monospace, SFMono-Regular, Menlo, monospace"
    },
    "space": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px"
    },
    "radius": {
      "sm": "4px",
      "md": "8px",
      "lg": "16px"
    },
    "border": {
      "width-sm": "1px",
      "width-md": "2px"
    },
    "shadow": {
      "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px rgba(0, 0, 0, 0.15)"
    },
    "semantic": {
      "header-bg": "var(--color-surface)",
      "header-text": "var(--color-text)",

      "button-bg": "var(--color-primary)",
      "button-text": "var(--color-background)",
      "button-bg-hover": "var(--color-secondary)",

      "card-surface": "var(--color-surface)",
      "card-border": "var(--color-border)",

      "input-bg": "var(--color-background)",
      "input-text": "var(--color-text)",
      "input-border": "var(--color-border)",
      "input-border-focus": "var(--color-primary)",

      "link-text": "var(--color-primary)",
      "link-hover": "var(--color-secondary)",

      "alert-success-bg": "var(--color-success)",
      "alert-warning-bg": "var(--color-warning)",
      "alert-error-bg": "var(--color-error)"
    },
    "component": {
      "navbar-bg": "var(--semantic-header-bg)",
      "navbar-link-text": "var(--semantic-header-text)",
      "navbar-link-hover": "var(--semantic-link-hover)",

      "modal-bg": "var(--semantic-card-surface)",
      "modal-radius": "var(--radius-lg)",

      "ticket-card-bg": "var(--semantic-card-surface)",
      "ticket-card-border": "var(--semantic-card-border)"
    }
  }
}
