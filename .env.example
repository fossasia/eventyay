# Eventyay Unified Environment Variables

# Generals
# ==============================================================================

# Running Environment (development, production, testing)
EVY_RUNNING_ENVIRONMENT=production

# Server Name / Domain
EVY_SITE_URL=https://eventyay.com

# Secret Key (Must be changed in production)
EVY_SECRET_KEY=CHANGEME_SECRET_KEY

# Allowed Hosts (JSON list or single string depending on setup, but typically list)
EVY_ALLOWED_HOSTS='["eventyay.com"]'

# Database
# ==============================================================================
# Database URL (Preferred for most platforms)
DATABASE_URL=postgres://user:password@hostname:5432/dbname

# Legacy/Alternative DB Vars
EVY_POSTGRES_DB=eventyay_db
EVY_POSTGRES_USER=eventyay_user
EVY_POSTGRES_PASSWORD=eventyay_password
EVY_POSTGRES_HOST=eventyay-db
EVY_POSTGRES_PORT=5432

# Redis
# ==============================================================================
# Redis URL (Preferred)
REDIS_URL=redis://hostname:6379/0

# Email
# ==============================================================================
EVY_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EVY_EMAIL_HOST=smtp.example.com
EVY_EMAIL_PORT=587
EVY_EMAIL_HOST_USER=user@example.com
EVY_EMAIL_HOST_PASSWORD=password
EVY_EMAIL_USE_TLS=true
EVY_DEFAULT_FROM_EMAIL=noreply@eventyay.com

# Storage (S3 / Google Cloud Storage)
# ==============================================================================
# AWS S3 Settings (if using S3)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=

# Google Cloud Storage (if using GCS)
# GS_BUCKET_NAME=
# GS_PROJECT_ID=

# TURN Server (Video)
# ==============================================================================
# TURN_URL=turn:turn.eventyay.com:3478
# TURN_USER=user
# TURN_PASSWORD=password
# TURN_SECRET=secret
